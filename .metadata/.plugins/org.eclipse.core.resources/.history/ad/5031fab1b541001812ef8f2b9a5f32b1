package hashTable;

public class rev_str {
public static void main(String args[]) {
	String str= "abcd";
	char[] rev= reverse(str);
	System.out.println(rev);
}
public static char[] reverse( String str) {
	char [] rev_char=str.toCharArray();
	char[] rev=new char[4];
	int j,i;
	System.out.println(rev_char.length);
	for (i=4,j=0;i>=0;i--,j++) {
	  	   rev[j]=rev_char[i];
	}
	return rev;
}
}
