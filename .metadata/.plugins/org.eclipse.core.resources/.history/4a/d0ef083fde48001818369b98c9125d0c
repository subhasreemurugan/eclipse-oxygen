package hashTable;

public class replace {
	public static void main(String Args[]) {
	String str= "wat the";
	char[] str_arr=str.toCharArray();
	int count=0;
	for (int i = 0;i<str_arr.length;i++) {
		if(str_arr[i]==' ') {
			count++;
			
		}
		
	}
	int len=count*2+str_arr.length-1;
	System.out.println(len);
	
	for (int i = str_arr.length-1;i>=0;i--) {
		System.out.println("ii"+str_arr[i]+len+" "+i+" "+str_arr[i]);
		if(str_arr[i]==' ') {
			
			str_arr[len-1]='%';
			str_arr[len-2]='0';
			str_arr[len-3]='2';
			len=len-3;
			
			System.out.println("len"+""+str_arr[7]);
		}
		else {
			System.out.println("len"+""+len);
			System.out.println("len"+""+str_arr[6]);
			//str_arr[len-1]='a';
			
			len=len-1;
		}
		
	}
	System.out.println(str_arr);
	}
	
}
